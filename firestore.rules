rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write to test collection (for development/testing)
    match /test/{document=**} {
      allow read, write: if true;
    }
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      // For development, we'll temporarilly allow all authenticated users
      // In production, uncomment the check below
      return isAuthenticated(); 
      // && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isAgent() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'agent';
    }
    
    // Companies - B2B customers
    match /companies/{companyId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Users
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if isAdmin();
    }
    
    // Products - Public read, admin write
    match /products/{productId} {
      allow read: if true; // Public
      allow write: if true; // TEMPORARY for development
    }
    
    // Orders
    match /orders/{orderId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAdmin() || isAgent();
      allow delete: if isAdmin();
    }
    
    // Agents
    match /agents/{agentId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Routes
    match /routes/{routeId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || isAgent();
    }
    
    // Leads
    match /leads/{leadId} {
      allow read: if isAuthenticated();
      allow create: if isAgent();
      allow update: if isAdmin() || isAgent();
      allow delete: if isAdmin();
    }
    
    // Settings
    match /settings/{settingId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}
